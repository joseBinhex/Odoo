                <center>   
                <h3>Course Details</h3>    
                </center>       
                <br/>        
                    <table class="table-striped table">  
                        <thead style="font-size: 23px;">            
                            <tr>                   
                                <h6>             
                                    <b>              
                                        <th>Name Course</th>            
                                        <th>Title</th>                          
                                        <th>Responsible</th>                           
                                        <th><b>Description</b></th>         
                                        <th>Content</th> 
                                        <th>Image</th>   
                                        <th>Sessions</th>
                                        <th>Documents</th>               
                                    </b>              
                                </h6>       
                            </tr>         
                        </thead>         
                            <tbody>                
                                <t t-foreach="courses" t-as="course">
                                    <tr>  
                                        <td><t t-esc="course.name"/></td>
                                        <td><t t-esc="course.title"/></td>
                                        <td><t t-esc="course.name_responsible"/></td>
                                        <td><t t-esc="course.description"/></td>
                                        <td><t t-raw="course.contenido"/></td>
                                        <td><img t-if="course.image" t-att-src="'data:image/png;base64,%s' % course.image.decode('utf-8')" alt="Course Image" style="width:20%; height:auto;"/></td>
                                        <td><a t-attf-href="/course/{{ course.id }}">Look all Sessions</a></td>
                                        <td>
                                        <a t-attf-href="/course/{{ course.id }}/attachments">
                                            <button class="btn btn-primary"><t style="font-weight: bold; color: black;" t-esc="course.num_attachments"/> ðŸ“Ž</button>
                                        </a>
                                        </td>
                                    </tr>
                                </t>
                        </tbody>
                    </table>
                </div>
                
            </div>
            <div class="col-md-6 text-right">
                    <p>
                        <a href="/courses">Go back!</a>
                    </p>
                </div>
        </t>
    </template>
    <!-- TEMPLATE ATTACHMENTS -->
    <template id="all_attachmentos" name="Attachments">
        <t t-call="website.layout">
            <div class="oe_structure">       
                <div class="container">
                    <t t-foreach="courses" t-as="course">
                        <t t-name="openacademy.course">
                            <form>
                                <field name="attachment_ids" widget="many2many_binary">
                                    <table>
                                        <thead style="font-size: 20px;">            
                                            <tr>                   
                                                <h6>             
                                                    <b>              
                                                        <th>Name Attachment</th>                           
                                                    </b>              
                                                </h6>       
                                            </tr>         
                                        </thead>
                                        <tbody>
                                            <t t-foreach="course.attachment_ids" t-as="attachment">
                                            <tr>
                                                <td><a t-if="attachment.id" t-attf-href="/web/content/{{ attachment.id }}?download=true" t-attf-download="{{ attachment.name }}"><i class="fa fa-download"/> <t t-esc="attachment.name"/></a>
                                                </td>
                                            </tr>
                                            </t>
                                        </tbody>
                                    </table>    
                                </field>       
                            </form>
                        </t>
                    </t>
                    <div class="row">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6 text-right">
                            <p>
                                <a href="/courses">Go back!</a>
                            </p>
                        </div>
                </div>
                </div>
            </div>
        </t>
    </template>


    <template id="course_sessions" name="Course Sessions">
        <t t-call="website.layout">
            <div class="container">
                <h1><t t-esc="course"/></h1>
                <table class="table table-striped">
                    <thead>
                    <t t-call="website.pager"/>
                        <tr>
                            <th>Session Name</th>
                            <th>Instructor</th>
                            <th>Start Date</th>
                            <th>Finish Date</th>
                            <th>Duration (hours)</th>
                            <th>Localization</th>
                            <th>Attendees</th>
                            <th>Available Seats</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-if="sessions">
                            <t t-foreach="sessions" t-as="session">
                                <tr>
                                    <td><t t-esc="session.name"/></td>
                                    <td><t t-esc="session.instructor.name"/></td>
                                    <td><t t-esc="session.date_start"/></td>
                                    <td><t t-esc="session.finish_date"/></td>
                                    <td><t t-esc="session.duration"/></td>
                                    <td><t t-esc="session.localization"/></td>
                                    <td>
                                    <!--  CONTEO DE ASISTENTES -->

                                        <t t-set="attendees_count" t-value="0"/>
                                        <t t-foreach="session.attendees" t-as="attendee">
                                            <t t-set="attendees_count" t-value="attendees_count + 1"/></t>
                                        <t t-esc="attendees_count"/>
                                    </td>
                                    <td><t t-esc="session.max_seats - session.attendees_count"/></td>
                                    <t t-if="userid not in [attendee.id for attendee in session.attendees]">
                                        <td>
                                            <a t-attf-href="http://10.1.0.50/add_user_to_session/{{ session.id }}"><button class="btn btn-primary">Asist</button></a>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td>
                                            <a t-attf-href="http://10.1.0.50/delete_user_to_session/{{ session.id }}">
                                                <button class="btn btn-primary" style="background-color: red !important;">Un-Asist</button>
                                            </a>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </t>
                        <t t-else="">
                            <tr>
                                <td colspan="8">No sessions found</td>
                            </tr>
                        </t>

                    </tbody>
                </table>
                <div class="row">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6 text-right">
                        <p>
                            <a href="/courses">Go back!</a>
                        </p>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
